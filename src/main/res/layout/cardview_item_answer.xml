<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="45pt"
    android:layout_height="60pt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="7pt"
    android:layout_margin="10dp"
    app:cardElevation="0dp"
    android:focusable="false"
    android:focusableInTouchMode="false"
    app:cardPreventCornerOverlap="true"
    >

    <FrameLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/card_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:scaleType="fitXY" />

        <androidx.cardview.widget.CardView
            android:layout_width="35pt"
            android:layout_height="35pt"
            android:layout_gravity="center"
            android:layout_marginBottom="19dp"
            app:cardElevation="5dp"
            app:cardCornerRadius="15dp"
            app:cardBackgroundColor="#F02A4C"
            android:focusable="false"
            android:focusableInTouchMode="false"
            >

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/image_card"
                android:layout_width="56dp"
                android:layout_height="54dp"
                android:adjustViewBounds="true"
                android:layout_gravity="center"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:scaleType="centerInside"></androidx.appcompat.widget.AppCompatImageView>

        </androidx.cardview.widget.CardView>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="55dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/assistant_bold"
            android:text="test"
            android:textColor="#F02A4C"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:textSize="15dp"></androidx.appcompat.widget.AppCompatTextView>

    </FrameLayout>

</androidx.cardview.widget.CardView>